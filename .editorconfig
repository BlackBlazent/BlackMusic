# top-most EditorConfig file
root = true

# Apply these settings to all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Apply these settings to Python files
[*.py]
indent_size = 4

# Apply these settings to Markdown files
[*.md]
trim_trailing_whitespace = false
